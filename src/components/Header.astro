---
const pathname = Astro.url.pathname;
const isHome = pathname === '/';
const isAbout = pathname === '/about' || pathname === '/about/';
---

<header>
  <nav>
    <h1><a href="/">THE HASHIRA</a></h1>
    <ul>
      <li><a href="/" class={isHome ? 'active' : ''}>Home</a></li>
      <li><a href="/about" class={isAbout ? 'active' : ''}>About</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    border-bottom: 2px solid #c41e3a;
    padding: 1.5rem 1rem;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  h1 {
    font-size: 1.8rem;
    color: #fff;
    letter-spacing: 2px;
  }

  h1 a {
    color: #fff;
  }

  h1 a:hover {
    text-decoration: none;
    color: #c41e3a;
  }

  ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  a.active {
    color: #fff;
    font-weight: bold;
  }
  
  a:visited {
    color: #fff;
  }
</style>